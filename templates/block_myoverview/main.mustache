{{!
    @template block_myoverview/main

    This template renders the main content area for the myoverview block.

    Example context (json):
    {}
}}

<div id="block-myoverview-{{uniqid}}" class="block-myoverview-view" data-region="myoverview">

    <div id="sort-by-courses-view-{{uniqid}}" class="sort-by-courses-view">
        {{#coursesview}}
			{{#hascourses}}
			  {{#inprogress}}
                {{#haspages}}
                    {{#pages}}
					    <h3 class="inprogresscoursestitle">{{#str}} in-progress-courses-title, theme_ildcustom {{/str}}</h3>
                        <ul class="list-group unstyled active" data-region="course-block">
                            {{#courses}} {{> block_myoverview/course-item }} {{/courses}}
                        </ul>
                    {{/pages}}
                    
					
                {{/haspages}}
                
              {{/inprogress}}
			
			  {{#future}}
				
                {{#haspages}}
                    {{#pages}}
					    <h3 class="futurecoursestitle">{{#str}} future-courses-title, theme_ildcustom {{/str}}</h3>
                        <ul class="list-group unstyled active" data-region="course-block">
                            {{#courses}} {{> block_myoverview/course-item }} {{/courses}}
                        </ul>
                    {{/pages}}
                    
					
                {{/haspages}}
                
              {{/future}}
            
			
			  {{#past}}
                {{#haspages}}
                    {{#pages}}
						<h3 class="pastcoursestitle">{{#str}} past-courses-title, theme_ildcustom {{/str}}</h3>
                        <ul class="list-group unstyled active" data-region="course-block">
                            {{#courses}} {{> block_myoverview/course-item }} {{/courses}}
                        </ul>
                    {{/pages}}
                    
					
                {{/haspages}}
                
              {{/past}}
			
			{{/hascourses}}
			{{^hascourses}}
                <div class="text-xs-center text-center m-t-3 nocourses-placeholder">
                    <img class="empty-placeholder-image-lg"
                         src="{{urls.noevents}}"
                         alt="{{#str}} nocourses, block_myoverview {{/str}}"
                         role="presentation">
                    <p class="text-muted m-t-1">{{#str}} nocourses, block_myoverview {{/str}}</p>
                </div>
            {{/hascourses}}
            
			
        {{/coursesview}}
    </div>
</div>

{{#js}}
    require(['jquery', 'block_myoverview/tab_preferences'], function($, TabPreferences) {
    var root = $('#block-myoverview-view-choices-{{uniqid}}');
    TabPreferences.registerEventListeners(root);

    $('.view-more').click(function(e) {
    // $('.course-summary-shortentext p').fadeToggle('slow');
	
	$(this).parents('.course-events-container-box').find('.course-summary-shortentext p').fadeToggle('slow');
	
	$(this).toggleClass('rotate');
    $(this).toggleClass('rotate-reset');
    });
    });
{{/js}}


